<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RoundedCornersDialog" parent="@style/Theme.MaterialComponents.Dialog">
        <item name="dialogCornerRadius">4dp</item>
    </style>

    <style name="DarkThemeApp" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@color/textColor</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/settings__bottomsheetborder</item>
    </style>

    <style name="DropdownTextView">
        <item name="arrow_drawable">@drawable/ic_arrow</item>

        <item name="title_font">@font/manrope</item>
        <item name="content_font">@font/manrope</item>

        <item name="title_text_size">26sp</item>

        <item name="content_text_size">22sp</item>
        <item name="content_padding">10dp</item>

        <item name="bg_drawable_expanded">@drawable/settings__dropdow_expanded</item>
        <item name="bg_drawable_regular">@drawable/settings__dropdown_regular</item>

    </style>
</resources>