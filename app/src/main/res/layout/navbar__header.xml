<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/bgColor"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="185dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="#C6BBA1"
        android:fontFamily="@font/yeseva_one"
        android:gravity="bottom"
        android:paddingStart="20sp"
        android:paddingBottom="42sp"
        android:text="@string/app_name"
        android:textColor="#747065"
        android:textSize="60sp"
        tools:ignore="RtlSymmetry" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="85dp"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/header"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="1dp"
        android:alpha="0.35"
        android:contentDescription="@string/Navbar__LogoDesc"
        app:srcCompat="@mipmap/flower" />

    <TextView
        android:id="@+id/navslogan"
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/header"
        android:layout_alignParentStart="true"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="15dp"
        android:textStyle="italic"
        android:textColor="#747065"
        android:text="@string/Navbar__Slogan"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/header"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:gravity="bottom|right"
        android:paddingStart="10sp"
        android:paddingEnd="10sp"
        android:textColor="#747065"
        android:paddingBottom="2sp"
        android:text="@string/Navbar__Version"
        android:textSize="16sp"
        tools:ignore="RtlHardcoded" />


</RelativeLayout>