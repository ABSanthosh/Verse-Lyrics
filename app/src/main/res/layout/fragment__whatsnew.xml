<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="300dp"
        android:layout_height="440dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/fragcolor"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="80dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="440dp"
            android:layout_gravity="center_horizontal">


            <ImageView
                android:id="@+id/topLeft"
                android:layout_width="102dp"
                android:layout_height="93dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="-5dp"
                android:layout_marginTop="0dp"
                android:contentDescription="@string/Fragment__Border"
                android:rotation="-90"
                android:rotationY="0"
                app:srcCompat="@drawable/fragment__border"
                app:tint="@color/metaTextColor"
                tools:ignore="VectorDrawableCompat" />

            <ImageView
                android:id="@+id/topRight"
                android:layout_width="102dp"
                android:layout_height="93dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="-5dp"
                android:contentDescription="@string/Fragment__Border"
                app:srcCompat="@drawable/fragment__border"
                app:tint="@color/metaTextColor"
                tools:ignore="VectorDrawableCompat" />


            <ImageView
                android:id="@+id/bottomLeft"
                android:layout_width="102dp"
                android:layout_height="93dp"
                android:layout_below="@+id/New_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="-5dp"
                android:contentDescription="@string/Fragment__Border"
                android:rotation="-180"
                app:srcCompat="@drawable/fragment__border"
                app:tint="@color/metaTextColor"
                tools:ignore="VectorDrawableCompat" />

            <ImageView
                android:id="@+id/bottomRight"
                android:layout_width="102dp"
                android:layout_height="93dp"
                android:layout_below="@+id/New_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="-5dp"
                android:contentDescription="@string/Fragment__Border"
                android:rotation="90"
                app:srcCompat="@drawable/fragment__border"
                app:tint="@color/metaTextColor"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/Heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="45dp"
                android:fontFamily="@font/aladin"
                android:text="@string/Fragment__New"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="45sp" />

            <TextView
                android:id="@+id/New_content"
                android:layout_width="234dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Heading"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:text="@string/Fragment__New__Content"
                android:textColor="@color/textColor"
                android:textSize="20sp" />

        </RelativeLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>