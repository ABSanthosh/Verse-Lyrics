<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="440dp"
        android:background="?attr/fragcolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="25dp"
            tools:layout_editor_absoluteY="80dp"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="440dp"
                android:paddingBottom="0dp">

                <ImageView
                    android:id="@+id/bd1"
                    android:layout_width="102dp"
                    android:layout_height="93dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="-5dp"
                    android:layout_marginTop="0dp"
                    android:contentDescription="@string/bd1"
                    android:rotationY="180"
                    app:srcCompat="@drawable/floral2"
                    app:tint="?attr/metaTextColor" />

                <ImageView
                    android:id="@+id/bd2"
                    android:layout_width="102dp"
                    android:layout_height="93dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="-4dp"
                    android:contentDescription="@string/bd2"
                    app:srcCompat="@drawable/floral2"
                    app:tint="?attr/metaTextColor" />

                <ImageView
                    android:id="@+id/bd3"
                    android:layout_width="102dp"
                    android:layout_height="93dp"
                    android:layout_below="@+id/textView2"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="-3dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginBottom="0dp"
                    android:contentDescription="@string/bd3"
                    android:rotationX="180"
                    android:rotationY="180"
                    app:srcCompat="@drawable/floral2"
                    app:tint="?attr/metaTextColor" />

                <ImageView
                    android:id="@+id/bd4"
                    android:layout_width="102dp"
                    android:layout_height="93dp"
                    android:layout_below="@+id/textView2"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="60dp"
                    android:layout_marginEnd="-4dp"
                    android:layout_marginBottom="3dp"
                    android:contentDescription="@string/bd4"
                    android:rotationX="180"
                    app:srcCompat="@drawable/floral2"
                    app:tint="?attr/metaTextColor" />

                <TextView
                    android:id="@+id/whatnewheading"
                    android:layout_width="159dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="75dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginEnd="75dp"
                    android:fontFamily="@font/aladin"
                    android:gravity="center"
                    android:text="@string/Whatnew"
                    android:textColor="?attr/textColor"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/whatnewheading"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="left"
                    android:text="@string/Whatnewcont"
                    android:textColor="?attr/textColor"
                    android:textSize="18sp" />


            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>