<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aigestudio="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bgColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/topLeft"
            android:layout_width="102dp"
            android:layout_height="93dp"
            android:layout_marginStart="-5dp"
            android:layout_marginTop="0dp"
            android:contentDescription="@string/Fragment__Border"
            android:rotation="-90"
            android:rotationY="0"
            app:srcCompat="@drawable/fragment__border"
            app:tint="@color/metaTextColor" />

        <TextView
            android:id="@+id/Heading"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:fontFamily="@font/aladin"
            android:gravity="center"
            android:paddingTop="12dp"
            android:text="Font Face"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="45sp" />

        <ImageView
            android:id="@+id/topRight"
            android:layout_width="102dp"
            android:layout_height="93dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="-5dp"
            android:contentDescription="@string/Fragment__Border"
            app:srcCompat="@drawable/fragment__border"
            app:tint="@color/metaTextColor" />
    </LinearLayout>

    <TextView
        android:id="@+id/setting__fontSelector__sample"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif"
        android:text="@string/Fragment__FontSelector_TestContent"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="24sp"
        android:textStyle="normal" />

    <com.aigestudio.wheelpicker.WheelPicker
        android:id="@+id/setting__fontSelector__roller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/settingsFontSelectorBg"
        aigestudio:wheel_atmospheric="false"
        aigestudio:wheel_curved="true"
        aigestudio:wheel_cyclic="false"
        aigestudio:wheel_item_align="center"
        aigestudio:wheel_item_text_color="#A7A7DB"
        aigestudio:wheel_item_text_size="24sp"
        aigestudio:wheel_selected_item_text_color="@color/settingsFontSelectorSelectedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="14dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/setDefault"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="7dp"
            android:layout_weight="1"
            android:background="@drawable/button__background"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="@string/Fragment__FontSelector_B2"
            android:textAllCaps="false"
            android:textColor="@color/buttontextColor" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/setFont"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:layout_weight="1"
            android:background="@drawable/button__background"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="@color/buttontextColor" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/setting__textFont__close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_weight="1"
            android:background="@drawable/button__background"
            android:text="Close"
            android:textAllCaps="false"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:textColor="@color/buttontextColor" />

    </LinearLayout>

</LinearLayout>