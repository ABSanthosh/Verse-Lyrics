<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/topLeft"
            android:layout_width="102dp"
            android:layout_height="93dp"
            android:layout_marginStart="-5dp"
            android:layout_marginTop="0dp"
            android:contentDescription="@string/Fragment__Border"
            android:rotation="-90"
            android:rotationY="0"
            app:srcCompat="@drawable/fragment__border"
            app:tint="@color/metaTextColor" />

        <TextView
            android:id="@+id/Heading"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:fontFamily="@font/aladin"
            android:gravity="center"
            android:paddingTop="12dp"
            android:text="Font Size"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="45sp" />

        <ImageView
            android:id="@+id/topRight"
            android:layout_width="102dp"
            android:layout_height="93dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="-5dp"
            android:contentDescription="@string/Fragment__Border"
            app:srcCompat="@drawable/fragment__border"
            app:tint="@color/metaTextColor" />
    </LinearLayout>

    <TextView
        android:id="@+id/setting__textSize__preview"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:fontFamily="@font/manrope"
        android:gravity="center"
        android:text="Mango"
        android:textSize="24sp" />

    <com.google.android.material.slider.Slider
        android:id="@+id/setting__textSize__slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:stepSize="25"
        android:value="50"
        android:valueFrom="0"
        android:valueTo="100"
        app:labelBehavior="gone"
        app:thumbColor="#E30425"
        app:trackColorActive="#E30425"
        app:trackColorInactive="#51E30425" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:paddingStart="14dp"
        android:paddingTop="10dp"
        android:paddingEnd="14dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Setting__textSize__defaultButton"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_marginEnd="7dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@drawable/button__background"
            android:text="@string/Fragment__FontSelector_B2"
            android:textAllCaps="false"
            android:textColor="@color/buttontextColor" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Setting__textSize__saveButton"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:layout_weight="1"
            android:background="@drawable/button__background"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="@color/buttontextColor" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/setting__textSize__close"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@drawable/button__background"
            android:text="Close"
            android:textAllCaps="false"
            android:textColor="@color/buttontextColor" />

    </LinearLayout>

</LinearLayout>